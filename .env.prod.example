# Production Environment Variables

# Database Configuration (Supabase)
POSTGRES_SERVER=your-supabase-db-host
POSTGRES_USER=your-supabase-user
POSTGRES_PASSWORD=your-supabase-password
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# Backend Configuration
SECRET_KEY=your-production-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins
BACKEND_CORS_ORIGINS=["https://ferreteria-village.com"]

# Email Configuration (optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com

# First Superuser
FIRST_SUPERUSER=admin@ferreteria.com
FIRST_SUPERUSER_PASSWORD=secure-password

# Frontend Configuration (for Vercel)
NEXT_PUBLIC_API_URL=https://api.ferreteria-village.com/api/v1

# Production
NODE_ENV=production